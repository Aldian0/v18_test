<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_loyalty_analysis_list" model="ir.ui.view">
        <field name="name">loyalty.analysis.list</field>
        <field name="model">loyalty.analysis</field>
        <field name="arch" type="xml">
            <list string="Daftar Analisis">
                <field name="name"/>
                <field name="total_points" sum="Grand Total Poin"/>
                <field name="max_discount" widget="badge" 
                       decoration-success="max_discount == 'SUPER_VIP'" 
                       decoration-info="max_discount == 'PREMIUM'" 
                       decoration-warning="max_discount == 'REGULAR'"/>
                <field name="high_value_count"/>
                <field name="failed_count" string="Gagal" optional="show" decoration-danger="failed_count > 0"/>
            </list>
        </field>
    </record>

    <record id="view_loyalty_analysis_form" model="ir.ui.view">
        <field name="name">loyalty.analysis.form</field>
        <field name="model">loyalty.analysis</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_calculate_loyalty" string="Proses Loyalitas" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group string="Profil">
                            <field name="name"/>
                            <field name="max_discount" widget="badge" decoration-success="max_discount != 'NONE'"/>
                        </group>
                        <group string="Statistik">
                            <field name="total_points"/>
                            <field name="failed_count" decoration-danger="failed_count > 0"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Transaksi">
                            <field name="transaction_ids">
                                <list editable="bottom">
                                    <field name="date"/>
                                    <field name="amount" required="1"/>
                                    <field name="status" widget="badge" 
                                           decoration-success="status == 'success'" 
                                           decoration-danger="status == 'failed'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="loyalty_analysis_action" model="ir.actions.act_window">
        <field name="name">Transaksi dan Diskon</field>
        <field name="res_model">loyalty.analysis</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Belum ada data analisis loyalitas.
            </p>
            <p>
                Klik tombol buat untuk mulai menghitung poin loyalitas berdasarkan riwayat transaksi pelanggan.
            </p>
        </field>
    </record>

    <menuitem id="loyalty_menu_act" 
              name="Transaksi dan Diskon" 
              parent="diskon_menu_categ" 
              action="loyalty_analysis_action" 
              sequence="10"/>
</odoo>