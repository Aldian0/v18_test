<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_budget_wizard_form" model="ir.ui.view">
        <field name="name">project.budget.wizard.form</field>
        <field name="model">project.budget.wizard</field>
        <field name="arch" type="xml">
            <form string="Kalkulator Budget Hierarkis">
                <header>
                    <button name="action_calculate_budget" 
                            string="Hitung Total Anggaran" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-calculator"/>
                </header>
                <sheet>
                    <div class="text-center mb-4">
                        <h2>Simulasi Perhitungan JSON Nested</h2>
                    </div>
                    
                    <group>
                        <group string="Input Data (JSON Structure)">
                            <field name="raw_data_display" 
                                   nolabel="1" 
                                   style="font-family: monospace; font-size: 12px; background-color: #f1f1f1; padding: 10px; border-radius: 5px;"/>
                        </group>
                        <group string="Output Hasil">
                            <field name="result_text" 
                                   nolabel="1" 
                                   style="font-family: monospace; font-weight: bold; font-size: 16px; color: #212529;"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Tutup" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_budget_wizard" model="ir.actions.act_window">
        <field name="name">Test Budget Recursive</field>
        <field name="res_model">project.budget.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_project_budget_test"
              name="Test Budget Recursive"
              parent="diskon_menu_categ" 
              action="action_project_budget_wizard"
              sequence="50"/>

</odoo>